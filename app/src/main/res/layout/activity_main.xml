<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:hint="0"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/txt_primernumero"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:baselineAligned="false"
        android:ems="10"
        android:hint="@string/txt_numero"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/txt_segundonumero"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:ems="10"
        android:hint="@string/txt_numero"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_suma" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_resta" />

    <Button
        android:id="@+id/btnMultipli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_multiplicar" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_division" />
</LinearLayout>